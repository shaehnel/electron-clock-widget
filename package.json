{
  "name": "clock",
  "version": "1.0.0",
  "description": "a clock",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-packager . clock --platform win32 --arch x64 --out dist/",
    "setup": "electron-installer-windows --src dist/clock-win32-x64/ --dest dist/installers/"
  },
  "keywords": [],
  "author": "myself",
  "license": "ISC",
  "devDependencies": {
    "electron": "^12.0.6",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "clock"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
